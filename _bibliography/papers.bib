@article{sanchez2024cashbased,
  title={Cash-Based Interventions Improve Multidimensional Integration Outcomes of {Venezuelan} Immigrants},
  author={S{\'a}nchez Sienra, Rodrigo and Ahrens, Achim and Casalis, Marine and Hangartner, Dominik},
  journal={World Development},
  volume={181},
  pages={106658},
  year={2024},
  selected={true},
  bibtex_show={false},
  preview={cashbased2024.png},
  abstract={Evaluating a cash transfer (~\$190) to vulnerable Venezuelan immigrants in Peru, we find that the intervention improves overall integration by 0.12--0.28 standard deviations, driven by gains in economic, social, and navigational dimensions. The cash transfer also boosts self-employment by 2--5 percentage points, with self-employed beneficiaries achieving higher income gains than wage workers. Effects diminish sharply with household size, highlighting the need for household-adjusted payments.}
}

